<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:SHHS" x:Class="SHHS.Controller.CalenderPage">
   
    
    <StackLayout Orientation="Vertical" Padding="0,0,0,0">
        <!-- Place new controls here -->
        <ScrollView VerticalScrollBarVisibility="Default">
        
            <RelativeLayout x:Name="RelativeView" >
                  
              <Label x:Name="YearLabel" Text = "2018" TextColor="White" FontSize="20" HorizontalOptions="Center" WidthRequest="50"
                         RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent, Property=Y, Constant= 25}"
                         RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property= Width, Factor=1 }">
                       <Label.FontFamily>
                        <OnPlatform x:TypeArguments="x:String">
                            <On Platform="iOS" Value="OpenSans-Bold" />
                            <On Platform="Android" Value="OpenSans-Bold.ttf#OpenSans-Bold" />
                        </OnPlatform>
                    </Label.FontFamily> 
                </Label>
                
                
            <StackLayout x:Name="DateStack" Orientation="Horizontal" Spacing=" 25" HorizontalOptions="Center"
                         RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToView, ElementName=YearLabel, Property=Y, Constant= 25}"
                         RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property= Width, Factor=1 }">
            
                  <Button Clicked="PreviousMonth" Image="arrowLeft.png"  BackgroundColor="Transparent"/>
         
            
            <Label x:Name="MonthLabel" Text="SEPTEMBER" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" TextColor="White" FontSize="20" WidthRequest="120">
                  <Label.FontFamily>
                        <OnPlatform x:TypeArguments="x:String">
                            <On Platform="iOS" Value="OpenSans-Bold" />
                            <On Platform="Android" Value="OpenSans-Bold.ttf#OpenSans-Bold" />
                        </OnPlatform>
                    </Label.FontFamily> 
            </Label>
                
                  <Button Clicked="NextMonth" Image="arrowLeft.png"  BackgroundColor="Transparent" Rotation="180"/>   
                
            </StackLayout>
            
            
            
               <Grid x:Name="week" RowSpacing="40" ColumnSpacing="1" Padding="0,0,0,0" 
                     RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor= 1 }" 
                     RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToView, Property= Y,ElementName= DateStack,Factor=1, Constant= 50}"
                     >
                     
                
            <Label Grid.Column="0" Text="Mon" TextColor="White" HorizontalOptions="Center"/>
            <Label Grid.Column="1" Text="Tue" TextColor="White" HorizontalOptions="Center"/>
            <Label Grid.Column="2" Text="Wed" TextColor="White" HorizontalOptions="Center"/>
            <Label Grid.Column="3" Text="Thu" TextColor="White" HorizontalOptions="Center"/>
            <Label Grid.Column="4" Text="Fri" TextColor="White" HorizontalOptions="Center"/>          
            <Label Grid.Column="5" Text="Sat" TextColor="White" HorizontalOptions="Center"/>
            <Label Grid.Column="6" Text="Sun" TextColor="White" HorizontalOptions="Center"/>
            

            
        </Grid>            
          
               <Grid x:Name="Calendar" RowSpacing="10" ColumnSpacing="1" Padding="0,0,0,0" 
                     RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor= 1 }" 
                     RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToView, Property= Y,ElementName= week,Factor=1, Constant= 50}"
                     >


            
        </Grid>
            
            
                   <!-- Annoucementbar 1 -->

            <RelativeLayout x:Name="Annoucement1Stack" RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToView, ElementName=Calendar, Property= Y, Constant=300}"
                RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor= 1}" Margin="10">
                
                
                
                                            
                        
                       <Button x:Name ="Button" RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property= Width, Factor=1}"  BorderColor="White" BorderWidth="2" HeightRequest="100"
                                                                                                                                                          BackgroundColor="Purple"/>
                       <BoxView BackgroundColor="Gold" HeightRequest="100" WidthRequest="10"/>
                        
                        <StackLayout  RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent, Property= Y, Factor= 0, Constant=0}"
                              RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToView, ElementName= Annoucement1Stack, Property= X, Factor=1 , Constant=0}"
                                     RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property= Width, Factor= 1}"
                                     RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToView, ElementName=Button, Property=Height, Factor=1}">
                                     
                                     
                                      
                            
                                        <Button Text="Announcement" TextColor="Gray"/> 
                                        <Label Text=" Event Name "/>
                                        <Label Text=" Location "/>
                                        
                                        
                
                       </StackLayout>
                        
                    
                
                
            
                
            </RelativeLayout>
            
            
            
                   <!-- Annoucementbar 2 -->
        
             <RelativeLayout x:Name="Annoucement2Stack" BackgroundColor="Black" RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToView, ElementName=Calendar, Property= Y, Constant=405}"
                RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor= 1}" Margin="10">
            
                
                       <Button x:Name ="Button2" RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property= Width, Factor=1}"  BorderColor="White" BorderWidth="2" HeightRequest="100"
                                                                                                                                                          BackgroundColor="Purple"/>
                       <BoxView BackgroundColor="Gold" HeightRequest="100" WidthRequest="10"/>
                
                         <StackLayout  RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent, Property= Y, Factor= 0, Constant=0}"
                              RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToView, ElementName= Annoucement2Stack, Property= X, Factor=1 , Constant=0}"
                                     RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property= Width, Factor= 1}"
                                     RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToView, ElementName=Button2, Property=Height, Factor=1}">
                                     
                                     
                                      
                            
                                        <Button Text="Announcement" TextColor="Gray"/> 
                                        <Label Text=" Event Name "/>
                                        <Label Text=" Location "/>
                                        
                                        
                
                       </StackLayout>
                
                
              </RelativeLayout>
            
       

        </RelativeLayout>
        

        

        




        </ScrollView>
    </StackLayout>
</ContentPage>